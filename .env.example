

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/orion_content?sslmode=require"

# Session (Phase 1)
SESSION_SECRET="your-super-secret-session-key-here"

# Admin User (for seeding)
ADMIN_EMAIL="admin@example.com" 
ADMIN_PASSWORD="admin123"

# NextAuth (Phase 2)
NEXTAUTH_URL=
NEXTAUTH_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Encryption for secrets vault
ENCRYPTION_KEY=        # 32-byte base64 for AES-GCM

# GitHub secrets writer
GITHUB_MODE=pat
GITHUB_REPO_FULL=      # e.g. yourname/orion-content
GITHUB_PAT=            # temporary fine-grained PAT to write repo secrets

# Console API
CONSOLE_BASE_URL=      # e.g. https://your-console.vercel.app
