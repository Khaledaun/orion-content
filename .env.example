# Database (Required for Vercel deployment)
DATABASE_URL=postgresql://<user>:<pass>@<host>/<db>?sslmode=require
DIRECT_URL=postgresql://<user>:<pass>@<host>/<db>?sslmode=require

# Session (Required)
SESSION_SECRET="your-super-secret-session-key-here"

# GitHub (Optional - for GitHub integration)
GITHUB_PAT="your_github_pat_with_repo_and_workflow_scopes"
GITHUB_MODE="actions"
GITHUB_REPO_FULL="username/repo-name"

# Encryption (Required for secrets vault)
ENCRYPTION_KEY="your-base64-encryption-key-here"

# NextAuth (Required for authentication)
AUTH_TRUST_HOST="true"
NEXTAUTH_URL="https://your-app.vercel.app"
CONSOLE_BASE_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Google OAuth (Optional - for Google login)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Admin User (Optional - for seeding)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="admin123"
